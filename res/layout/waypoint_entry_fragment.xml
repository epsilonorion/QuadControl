<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView01"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_alignParentTop="true" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusableInTouchMode="true"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/lblWaypointInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Waypoint Info"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/lblWaypointName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Waypoint Name: " />

            <EditText
                android:id="@+id/txtWaypointName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="6" >
            </EditText>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/lblLatitude"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:text="Latitude: " />

            <EditText
                android:id="@+id/txtLatitude"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="6"
                android:textSize="12dp" >
            </EditText>

            <TextView
                android:id="@+id/lblLongitude"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:text="Longitude: " />

            <EditText
                android:id="@+id/txtLongitude"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="6"
                android:textSize="12dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/lblSpeedTo"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:text="SpeedTo: " />

            <EditText
                android:id="@+id/txtSpeedTo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="6"
                android:textSize="12dp" >
            </EditText>

            <TextView
                android:id="@+id/lblHoldTime"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:text="Hold Time: " />

            <EditText
                android:id="@+id/txtHoldTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="6"
                android:textSize="12dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/lblAltitude"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:text="Altitude: " />

            <EditText
                android:id="@+id/txtAltitude"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="6"
                android:textSize="12dp" >
            </EditText>

            <TextView
                android:id="@+id/lblHeadingFrom"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:text="Yaw From: " />

            <EditText
                android:id="@+id/txtDesiredHeading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="6"
                android:textSize="12dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/lblPanAngle"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:text="Pan Angle: " />

            <EditText
                android:id="@+id/txtPanAngle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="6"
                android:textSize="12dp" >
            </EditText>

            <TextView
                android:id="@+id/lblTiltAngle"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:text="Tilt Angle: " />

            <EditText
                android:id="@+id/txtTiltAngle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="6"
                android:textSize="12dp" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/SubmitContainer"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:baselineAligned="false"
            android:gravity="center_horizontal" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/btnSubmitNewWaypt"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_weight="1"
                    android:text="New" />

                <Button
                    android:id="@+id/btnModifyCurrentWaypt"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="1"
                    android:text="Modify" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

</ScrollView>